<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#d8e9ff"
   >
    tools:context="com.example.tenthtask.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <TextView
        android:id="@+id/sensor"
        android:layout_width="wrap_content"
        android:lineSpacingMultiplier="1"
        android:layout_marginLeft="55dp"
        android:textStyle="bold"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/Header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="20dp"
        android:textColor="#f44336"
        android:textStyle="bold"
        android:text="Deviation from the northÐ°: 0.0"
        android:layout_gravity="center"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <ImageView
            android:id="@+id/Compass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/compass"
            android:layout_gravity="center"/>
    <ImageView
        android:id="@+id/CompassView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:src="@drawable/compassstr"
        android:layout_marginTop="96dp" />

</RelativeLayout>
        <TextView
            android:id="@+id/Magneticc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="20dp"
            android:textColor="#2200ff"
            android:textStyle="bold"
            android:text="0.0 \u00B5Tesla"
            android:layout_gravity="center"/>
        <ImageView
            android:id="@+id/magnet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/Baroment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="20dp"
            android:textColor="#2200ff"
            android:textStyle="bold"
            android:text="0.0 \u00B5Tesla"
            android:layout_gravity="center"/>
        <ImageView
            android:id="@+id/weather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btnWrite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/write_file"
                android:onClick="onclick">
            </Button>
            <Button
                android:id="@+id/btnRead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/read_file"
                android:onClick="onclick">
            </Button>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btnWriteSD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/write_file_sd"
                android:onClick="onclick">
            </Button>
            <Button
                android:id="@+id/btnReadSD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/read_file_sd"
                android:onClick="onclick">
            </Button>
        </LinearLayout>

        <TextView
            android:id="@+id/view"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/write_text">
        </TextView>
        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="ADD to BASE" />
        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Edit Base" />
    </LinearLayout>

    </ScrollView >
